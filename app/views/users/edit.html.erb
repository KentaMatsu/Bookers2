<% if @user.errors.any? %>
  <%= @user.errors.count %>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h1>User info</h1>

<%= form_with model: @user, local:true do |f| %>

  <%= f.text_field :name, autofocus: true, id:"user_name" %>

  <%= f.attachment_field :profile_image %>

  <%= f.text_area :introduction %>

  <%= f.submit "Update User" %>

<% end %>

