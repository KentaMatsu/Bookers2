<div class="row">
  <div class="col-xs-6 col-xs-offset-3 text-center" style="margin-top: 25px;">
    <% if user_signed_in? %>
      <%= form_with url:search_path, method: :get, local: true do |f| %>
        <%= f.text_field 'content' %>
        <%= f.select 'model', options_for_select({ "User" => "user", "Book" => "book" }) %>
        <%= f.select 'method', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
        <%#f.selectとoptions_for_selectでプルダウンを可能にしている%>
        <%= f.submit :"検索" %>
      <% end %>
    <% end %>
  </div>
</div>