<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "books/error_messages", book: @book %>
      <%= render 'books/list', book: @book_new, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "40x40" %><br>
              <%= @user.name %>
            <% end %>
          </td>
          <td>
          　<%= link_to @book.title, book_path(@book.id) %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <td>
            <% if @book.user_id == current_user.id %>
              <%= link_to "Edit", edit_book_path(@book) %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか?" %>
            <% end %>
          </td>
          <td>
            <%= render "books/favorite", book: @book %>
          </td>
          <td>
            <p>コメント数：<%= @book.book_comments.count %></p>
          </td>
        </tr>
        <tr>
        <% @book.book_comments.each do |book| %>
          <td>
            <%= link_to user_path(book.user) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "40x40" %><br>
              <%= book.user.name %>
            <% end %>
          </td>
          <td>
            <%= book.book_comment %>
          </td>
          <td>
            <% if book_comment.user == current_user %>
              <%= link_to "Destroy", book_book_comments_path(book_comment.book, book), method: :delete %>
            <% end %>
          </td>
        <% end %>
        </tr>
      </table>
      <div>
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment %><br>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
