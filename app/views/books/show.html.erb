<h2>Book detail</h2>

<table>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%= link_to user_pash(@user) do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "40x40" %><br>
        <%= @user.name %>
      <% end %>
    </td>
    <td>
    　<%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
    </td>
    <td>
      <%= book.body %>
    </td>
    <td>
      <% if @books.user == current_user %>
        <%= link_to "Edit", edit_book_path(book.id) %>
      <% end %>
    </td>
    <td>
      <% if @books.user == current_user %>
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>